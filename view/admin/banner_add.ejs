<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta name="viewport"
        content="width=device-width,initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <title>轮播图添加-管理中心</title>
    <link href="static/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="static/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="static/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="static/css/animate.min.css" rel="stylesheet">
    <link href="static/css/style.min862f.css?v=4.1.0" rel="stylesheet">
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>添加轮播图</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="form_basic.html#">选项1</a>
                                </li>
                                <li><a href="form_basic.html#">选项2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal m-t">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">所属分类：</label>
                                <div class="col-sm-8">
                                    <select class="form-control input-s-sm">
                                        <!-- <option value="-1">-- 请选择 --</option> -->
                                        <% for( let index = 0; index < categorySon.length; index++ ) { %>
                                            <option value="<%- categorySon[index]['id'] -%>"><%- categorySon[index]['level']>0? '----'.repeat(categorySon[index]['level']):'' -%><%- categorySon[index]['name'] -%></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>                            
                            <div class="form-group">
                                <div class="form-group from-group-product_img">
                                    <label class="col-sm-3 control-label"><i class="text-danger">*</i> 轮播图片：</label>
                                    <div class="col-sm-8">
                                        <div class="form-control" style="border:none;height:auto;font-size:0;line-height:0;"></div>
                                        <label for="banner" id="banner" data-cropper-option='{"width":1920,"height":450}' class="btn-add">
                                            <span class="btn btn-primary">点击上传</span>
                                        </label>
                                        <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>建议尺寸<span class="banner-size">1920*450<span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">图片链接：</label>
                                <div class="col-sm-8">
                                    <input  class="form-control" id="open_url" type="text" placeholder="点击图片跳转链接" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">主标题：</label>
                                <div class="col-sm-8">
                                    <input  class="form-control" id="title" type="text" placeholder="显示在图片上面的大字，可不填" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">副标题：</label>
                                <div class="col-sm-8">
                                    <input  class="form-control" id="description" type="text" placeholder="显示在图片上面的小字，可不填" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">显示顺序：</label>
                                <div class="col-sm-8">
                                    <input  class="form-control" id="sort" type="text" placeholder="默认99，数字越小显示越靠前" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-3">
                                    <button class="btn btn-primary btn-submit" type="button">提交</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</body>
<script type="text/javascript" src="static/js/jquery.min.js"></script>
<script src="static/js/plugins/layer/layer.min.js" type="text/javascript"></script>
<script type="text/javascript" src="scripts/fcup/fcup.min.js"></script>
<script src="scripts/common.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function(){
        uploadImgFcup('banner');
        $("select")[0].onchange = function(){
            if(this.selectedOptions[0].innerText=='首页头部轮播大图'){
                $(".from-group-product_img .banner-size").text('1920*450');
            }
            if(this.selectedOptions[0].innerText=='首页轮播小图'){
                $(".from-group-product_img .banner-size").text('495*338');
            }
        }
        $(".btn-submit").click(function(){
            var addBanner = <%- modify===-1 ? 'true':'false'; -%>;
            if(!addBanner){
                return;
            };

            //没选择分类提示选择分类
            if($("select").val()==-1){
                layer.msg('请选择所属分类!');
                return;
            }

            if($(".from-group-product_img img").length==0){
                layer.msg('请上传图片',{time:1000},function(){
                });
            }else{
                $.post('/admin/banner_add',{
                    "type":"bannerAdd"
                    ,"category_id":$("select").val()
                    ,"image_url":$(".from-group-product_img img").attr('src')?$(".from-group-product_img img").attr('src').split('?')[0]:''
                    ,"open_url":$.trim($("#open_url").val())
                    ,"sort":$.trim($("#sort").val())
                    ,"title":$.trim($("#title").val())
                    ,"description":$.trim($("#description").val())
                },function(data){
                    layer.msg(data,{time:1000},function(){
                        //window.location.href="/admin/banner_list.php";
                    })
                    resetForm();
                    window.top.openMenu($(window.top.document).find('[data-index=4]'));
                    window.top.freshBannerList();
                })

            }
        });
        <% if(modify!==-1) { %>
            $("#banner .btn-primary").text('点击更换');
            $.get('/admin/banner_add?modify=<%- modify -%>',function(data){
                var data = data;
                $(".from-group-product_img .form-control").html($('<img style="width:150px;" data-org="' + data.image_url_org + '" data-width="1920" data-height="450" class="cropper poster" src="'+data.image_url+'" alt="">'))
                //$("#nav_ids").val(data.title);
                $("#open_url").val(data.open_url);
                $("#sort").val(data.sort);
                $("#title").val(data.title);
                $("#description").val(data.description);
            })
            $(".btn-submit").click(function(){
                    //没选择分类提示选择分类
                    if($("select").val()==-1){
                        layer.msg('请选择所属分类!');
                        return;
                    }

                    $.post('/admin/banner_add',{
                        "type":"bannerUpdate"
                        ,"modify":<%- modify %>
                        ,"category_id":$("select").val()
                        ,"image_url":$(".from-group-product_img img").attr('src')?$(".from-group-product_img img").attr('src').split('?')[0]:''
                        ,"open_url":$.trim($("#open_url").val())
                        ,"sort":$.trim($("#sort").val())
                        ,"title":$.trim($("#title").val())
                        ,"description":$.trim($("#description").val())
                    },function(data){
                        layer.msg(data,{time:400},function(){
                            window.top.freshBannerList();
                            var index = window.top.layer.getFrameIndex(window.name);
                            window.top.layer.close(index);
                        })
                    })

            });

        <% } %>

    });
</script>
</html>