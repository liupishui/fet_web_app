<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta name="viewport"
        content="width=device-width,initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <title>标签添加-管理中心</title>
    <link href="static/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="static/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="static/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="static/css/animate.min.css" rel="stylesheet">
    <link href="static/css/style.min862f.css?v=4.1.0" rel="stylesheet">
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>添加标签</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="form_basic.html#">选项1</a>
                                </li>
                                <li><a href="form_basic.html#">选项2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal m-t">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">所属分类：</label>
                                <div class="col-sm-8">
                                    <select class="form-control input-s-sm">
                                        <option value="-1">-- 请选择 --</option>
                                        <% for( let index = 0; index < categorySon.length; index++ ) { %>
                                            <option value="<%- categorySon[index]['id'] -%>"><%- '----'.repeat(categorySon[index]['level'])-%><%- categorySon[index]['name'] -%></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">标签名称：</label>
                                <div class="col-sm-8">
                                    <input  class="form-control" id="name" type="text" placeholder="标签名称" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-3">
                                    <button class="btn btn-primary btn-submit" type="button">提交</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</body>
<script type="text/javascript" src="static/js/jquery.min.js"></script>
<script src="static/js/plugins/layer/layer.min.js" type="text/javascript"></script>
<script src="/admin/scripts/common.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function(){
        $(".btn-submit").click(function(){
            var addTag = <%- modify===-1?'true':'false'-%>;
            if(!addTag){
                return;
            };
            if($("select").val()==-1){
                layer.msg('请选择标签分类',{time:1000},function(){
                });
                return;
            }
            if($.trim($("#name").val())==''){
                layer.msg('请填写分类名称',{time:1000},function(){
                });
            }else{
                $.post('/admin/tag_add',{
                    "type":"tagAdd"
                    ,'news_categories_id':$("select").val()
                    ,"name":$.trim($("#name").val())
                },function(data){
                    let btns = ['继续添加','跳转列表'];
                    if(data.msg=="标签已经存在请勿重复添加"){
                        btns = ['重新添加','跳转列表'];
                    }
                    layer.confirm(data.msg,{btn:btns},function(index){
                        layer.close(index);
                        resetForm();
                    },function(index){
                        layer.close(index);
                        resetForm();
                        window.top.openMenu($(window.top.document).find('[data-index=12]'));
                        window.top.freshTagList();
                    })                   
                   
                })

            }
        });
        <% if(modify!==-1){ %>
            $.get('/admin/tag_add?modify=<%- modify -%>',function(data){
                var data = data;
                //$("#nav_ids").val(data.title);
                $("#name").val(data.name);
                $("select").val(data.news_categories_id);
            })
            $(".btn-submit").click(function(){
                if($("select").val()==-1){
                    layer.msg('请选择标签分类',{time:1000},function(){
                    });
                    return;
                }
                if($.trim($("#name").val())==''){
                    layer.msg('请填写分类名称',{time:1000},function(){
                    });
                }else{
                    $.post('/admin/tag_add',{
                        "type":"tagUpdate"
                        ,"modify":<%- modify -%>
                        ,'news_categories_id':$("select").val()
                        ,"name":$.trim($("#name").val())
                    },function(data){
                        layer.msg(data.msg,{time:400},function(){
                            window.top.freshTagList();
                            var index = window.top.layer.getFrameIndex(window.name);
                            window.top.layer.close(index);
                        })
                    })
                }
            });
        <% } %>

    });
</script>
</html>