<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta name="viewport"
        content="width=device-width,initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <title>添加招聘-管理中心</title>
    <link href="static/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="static/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="static/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="static/css/animate.min.css" rel="stylesheet">
    <link href="static/css/style.min862f.css?v=4.1.0" rel="stylesheet">
</head>

<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>发布<%- categoryPidInfo['name'];-%></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="form_basic.html#">选项1</a>
                                </li>
                                <li><a href="form_basic.html#">选项2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal m-t">
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><i class="text-danger">*</i> 所属分类：</label>
                                <div class="col-sm-8">
                                    <select class="form-control input-s-sm">
                                        <option value="-1">-- 请选择 --</option>
                                        <% for( let index = 0; index < categorySon.length; index++ ) { %>
                                            <option value="<%- categorySon[index]['id'];%>"><%- categorySon[index]['level']>0? '----'.repeat(categorySon[index]['level']):'';-%><%- categorySon[index]['name'];-%></option>
                                        <% } %>
                                    
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><i class="text-danger">*</i> 岗位名称：</label>
                                <div class="col-sm-8">
                                    <input  class="form-control" id="gangwei" type="text" placeholder="必须填写" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><i class="text-danger">*</i> 招聘人数：</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="zhaopinrenshu" placeholder="招聘人数">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><i class="text-danger">*</i> 职位描述：</label>
                                <div class="col-sm-8">
                                <textarea class="form-control" cols="30" rows="2" id="zhiweimiaoshu" style="height:146px;" placeholder="岗位描述"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><i class="text-danger">*</i> 职位职责：</label>
                                <div class="col-sm-8">
                                <textarea class="form-control" cols="30" rows="2" id="zhiweizhize" style="height:100px;" placeholder="职位职责"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><i class="text-danger">*</i> 任职资格：</label>
                                <div class="col-sm-8">
                                <textarea class="form-control" cols="30" rows="2" id="renzhizige"  style="height:110px;" placeholder="任职资格"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><i class="text-danger">*</i> 福利待遇：</label>
                                <div class="col-sm-8">
                                <textarea class="form-control" cols="30" rows="2" id="fulidaiyu"  style="height:146px;" placeholder="福利待遇"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><i class="text-danger">*</i> 联系邮箱：</label>
                                <div class="col-sm-8">
                                <input class="form-control" type="text" id="email" placeholder="联系邮箱">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><i class="text-danger">*</i> 联系电话：</label>
                                <div class="col-sm-8">
                                <input class="form-control" type="text" id="tel" placeholder="联系电话">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-3">
                                    <button class="btn btn-primary btn-submit" type="button">提交</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="static/js/jquery.min.js?v=2.1.4"></script>
<script src="static/js/bootstrap.min.js?v=3.3.6"></script>
<script src="static/js/plugins/layer/layer.min.js"></script>
<script type="text/javascript" src="/admin/scripts/ueditor/ueditor.config.js"></script>
<script type="text/javascript" src="/admin/scripts/ueditor/ueditor.all.js"></script>
<script type="text/javascript" src="scripts/fcup/fcup.min.js"></script>
<script src="scripts/common.js"></script>

<script type="text/javascript">
    $(function(){
        <% if(modify===-1) {%>
        //添加招聘
        $(".btn-submit").click(function(){
                if($("select").val()==-1){
                    layer.msg('请选择城市');
                    return
                }
                if($.trim($("#gangwei").val())==''){
                    layer.msg('岗位不能为空');
                    return;
                }
                if($.trim($("#zhaopinrenshu").val())==''){
                    layer.msg('招聘人数不能为空');
                    return;
                }
                if($.trim($("#zhiweimiaoshu").val())==''){
                    layer.msg('职位描述不能为空');
                    return;
                }
                if($.trim($("#zhiweizhize").val())==''){
                    layer.msg('职位职责不能为空');
                    return;
                }
                if($.trim($("#renzhizige").val())==''){
                    layer.msg('任职资格不能为空');
                    return;
                }
                if($.trim($("#fulidaiyu").val())==''){
                    layer.msg('福利待遇不能为空');
                    return;
                }
                if($.trim($("#email").val())==''){
                    layer.msg('邮箱不能为空');
                    return;
                }
                if($.trim($("#tel").val())==''){
                    layer.msg('电话不能为空');
                    return;
                }
                $.post('/admin/zhaopin_add',{
                    type:'zhaopinAdd',
                    'category_id':$("select").val(),
                    'city':$("select").val(),
                    'gangwei':$.trim($("#gangwei").val()),
                    'zhaopinrenshu':$.trim($("#zhaopinrenshu").val()),
                    'zhiweimiaoshu':$.trim($("#zhiweimiaoshu").val()),
                    'zhiweizhize':$.trim($("#zhiweizhize").val()),
                    'renzhizige':$.trim($("#renzhizige").val()),
                    'fulidaiyu':$.trim($("#fulidaiyu").val()),
                    'email':$.trim($("#email").val()),
                    'tel':$.trim($("#tel").val())                   
                },function(data){
                    layer.confirm(data,{btn:['继续添加','跳转列表']}, function(index){
                            layer.close(index);
                    },function(index){
                        layer.close(index);
                        //resetForm();
                        window.top.openMenu($(window.top.document).find('[data-index=2021070701]'));
                        window.top.freshZhaoPinList();
                    })
                })
        });
        <% } else { %>
        //修改新闻
            //获取修改新闻内容
            $.get('/admin/zhaopin_add?modify=<%-modify-%>',function(data){
                var newsArticle = data;
                $("select").val(newsArticle.city);
                $("#gangwei").val(newsArticle.gangwei);
                $("#zhaopinrenshu").val(newsArticle.zhaopinrenshu);
                $("#zhiweimiaoshu").val(newsArticle.zhiweimiaoshu);
                $("#zhiweizhize").val(newsArticle.zhiweizhize);
                $("#renzhizige").val(newsArticle.renzhizige);
                $("#fulidaiyu").val(newsArticle.fulidaiyu);
                $("#email").val(newsArticle.email);
                $("#tel").val(newsArticle.tel);
            })
            //上传修改内容
            $(".btn-submit").click(function(){
                if($("select").val()==-1){
                    layer.msg('请选择分类',{time:3000});
                    return;
                }
                if($.trim($("#gangwei").val())==''){
                    layer.msg('岗位不能为空');
                    return;
                }
                if($.trim($("#zhaopinrenshu").val())==''){
                    layer.msg('招聘人数不能为空');
                    return;
                }
                if($.trim($("#zhiweimiaoshu").val())==''){
                    layer.msg('职位描述不能为空');
                    return;
                }
                if($.trim($("#zhiweizhize").val())==''){
                    layer.msg('职位职责不能为空');
                    return;
                }
                if($.trim($("#renzhizige").val())==''){
                    layer.msg('任职资格不能为空');
                    return;
                }
                if($.trim($("#fulidaiyu").val())==''){
                    layer.msg('福利待遇不能为空');
                    return;
                }
                if($.trim($("#email").val())==''){
                    layer.msg('邮箱不能为空');
                    return;
                }
                if($.trim($("#tel").val())==''){
                    layer.msg('电话不能为空');
                    return;
                }
                $.post('/admin/zhaopin_add',{
                    type:'zhaopinUpdate',
                    'modify':<%-modify-%>,
                    'category_id':$("select").val(),
                    'city':$("select").val(),
                    'gangwei':$.trim($("#gangwei").val()),
                    'zhaopinrenshu':$.trim($("#zhaopinrenshu").val()),
                    'zhiweimiaoshu':$.trim($("#zhiweimiaoshu").val()),
                    'zhiweizhize':$.trim($("#zhiweizhize").val()),
                    'renzhizige':$.trim($("#renzhizige").val()),
                    'fulidaiyu':$.trim($("#fulidaiyu").val()),
                    'email':$.trim($("#email").val()),
                    'tel':$.trim($("#tel").val())                   
                },function(data){
                    // window.top.openMenu($(window.top.document).find('[data-index=2021070701]'));
                    window.top.freshZhaoPinList();
                    var index = window.top.layer.getFrameIndex(window.name);
                        window.top.layer.close(index);

                })
            });

        <% } %>
    });

</script>
</html>