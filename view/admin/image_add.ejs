<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta name="viewport"
        content="width=device-width,initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <title>图片添加-管理中心</title>
    <link href="static/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="static/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="static/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="static/css/animate.min.css" rel="stylesheet">
    <link href="static/css/style.min862f.css?v=4.1.0" rel="stylesheet">
</head>

<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>发布<%- categoryPidInfo['name'] -%> (照片墙)</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="form_basic.html#">选项1</a>
                                </li>
                                <li><a href="form_basic.html#">选项2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal m-t">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">所属分类：</label>
                                <div class="col-sm-8">
                                    <select class="form-control input-s-sm">
                                        <option value="-1">-- 请选择 --</option>
                                        <% for( let index = 0; index < categorySon.length; index++ ) { %>
                                            <option value="<%- categorySon[index]['id'] -%>"><%- categorySon[index]['name'] -%></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">图片标题：</label>
                                <div class="col-sm-8">
                                    <input  class="form-control" id="title" type="text" placeholder="可不填" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">图片描述：</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="content" placeholder="可不填">
                                </div>
                            </div>
                            <div class="form-group from-group-product_img">
                                <label class="col-sm-3 control-label">图片：</label>
                                <div class="col-sm-8">
                                    <div class="form-control" style="border:none;height:auto;font-size:0;line-height:0;"></div>
                                    <label for="banner" id="img_src" data-cropper-option='{"width":1920,"height":310}' class="btn-add">
                                        <span class="btn btn-primary">点击上传</span>
                                    </label>
                                    <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>建议尺寸1930*310</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">图片链接：</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="link" placeholder="点击图片跳转链接，可不填">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">显示顺序：</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="sort" placeholder="默认99，数字越小显示越靠前">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-3">
                                    <button class="btn btn-primary btn-submit" type="button">提交</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="static/js/jquery.min.js?v=2.1.4"></script>
<script src="static/js/bootstrap.min.js?v=3.3.6"></script>
<script src="static/js/plugins/layer/layer.min.js"></script>
<script type="text/javascript" src="scripts/fcup/fcup.min.js"></script>
<script src="/admin/scripts/common.js" type="text/javascript"></script>

<script type="text/javascript">
    uploadImgFcup('img_src');

    $(function(){
        //添加图片
        $(".btn-submit").click(function(){
            var addNews = <%- modify===-1?'true':'false' -%>;
            if(!addNews){
                return;
            };
            if($("select").val()==-1){
                layer.msg('请选择图片分类',{time:3000});
                return;
            }
            if($('#img_src').prev().find('img').length==0){
                layer.msg('请上传图片',{time:3000});
            }else{
                $.post('/admin/image_add',{
                    type:'Add',
                    'category_id':$("select").val(),
                    'title':$.trim($("#title").val()),
                    'content':$.trim($("#title").val()),
                    'src':$('#img_src').prev().find('img').attr('src')?$('#img_src').prev().find('img').attr('src').split('?')[0]:'',
                    'link':$.trim($("#link").val()),
                    'sort':$.trim($("#sort").val()),
                },function(data){
                    layer.msg(data,{time:1500},function(){
                       // window.location.href="/admin/news_list.php";
                    });
                    resetForm();
                    window.top.openMenu($(window.top.document).find('[data-index=9]'));
                    window.top.freshImagelinkList();
                })
            }
        });
        //修改新闻
        <% if(modify!==-1) { %>
            //获取修改新闻内容
            $.get('/admin/image_add?modify=<%- modify -%>',function(data){
                var imageDetail = data;
                $("select").val(imageDetail.category_id);
                $("#title").val(imageDetail.title);
                $("#content").val(imageDetail.content);
                $(".from-group-product_img .form-control").html($('<img style="width:150px;" data-org="' + imageDetail.src_org + '" data-width="600" data-height="450" class="poster cropper" src="'+imageDetail.src+'" alt="">'));
                $("#link").val(imageDetail.link);
                $("#sort").val(imageDetail.sort);
            })
            //上传修改内容
            $(".btn-submit").click(function(){
                if($("select").val()==-1){
                    layer.msg('请选择图片分类',{time:3000});
                    return;
                }
                if($('#img_src').prev().find('img').length==0){
                    layer.msg('请上传图片',{time:3000});
                 }else{
                    $.post('/admin/image_add',{
                        'type'  : 'Update',
                        'modify':<%- modify -%>,
                        'category_id':$("select").val(),
                        'title':$.trim($("#title").val()),
                        'content':$.trim($("#title").val()),
                        'src':$('#img_src').prev().find('img').attr('src')?$('#img_src').prev().find('img').attr('src').split('?')[0]:'',
                        'link':$.trim($("#link").val()),
                        'sort':$.trim($("#sort").val())
                    },function(data){
                        layer.msg(data,{time:600},function(){
                            window.top.freshImagelinkList();
                            var index = window.top.layer.getFrameIndex(window.name);
                            window.top.layer.close(index);
                        });
                    })
                }
            });

        <% } -%>
    });

</script>

</script>
</html>