<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta name="viewport"
        content="width=device-width,initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <title>管理中心</title>
    <link href="static/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="static/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="static/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="static/css/animate.min.css" rel="stylesheet">
    <link href="static/css/style.min862f.css?v=4.1.0" rel="stylesheet">
</head>

<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>客户评价添加</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="form_basic.html#">选项1</a>
                                </li>
                                <li><a href="form_basic.html#">选项2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                            <div class="form-horizontal m-t">
                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label">客户姓名：</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" id="name" value="<%- modify!==-1 ? clientssayModify['name']:'' -%>" placeholder="请输入客户姓名" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label">客户职位：</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" id="job" value="<%- modify!==-1 ? clientssayModify['job']:'' -%>" placeholder="请输入客户职位" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label">头像：</label>
                                    <div class="col-sm-8">
                                        <div class="form-control" style="border:none;height:auto;font-size:0;line-height:0;">
                                            <img src="<%- modify!==-1 ? clientssayModify['avatar']:'' -%>" style="width:100px;"/>
                                        </div>
                                        <label for="avatar" id="avatar" class="btn-add">
                                            <span class="btn btn-primary">点击上传</span>
                                        </label>
                                        <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>客户头像</span>                                               
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label">评价：</label>
                                    <div class="col-sm-8">
                                        <textarea class="form-control" id="evaluation" value="<%- modify!==-1 ? clientssayModify['evaluation']:'' -%>" placeholder="请输入客户姓名" type="text" ><%- modify!==-1 ? clientssayModify['evaluation']:'' -%></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-8 col-sm-offset-3">
                                        <button class="btn btn-primary btn-submit" type="button">提交</button>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script type="text/javascript" src="static/js/jquery.min.js"></script>
<script src="static/js/plugins/layer/layer.min.js" type="text/javascript"></script>
<script type="text/javascript" src="scripts/fcup/fcup.min.js"></script>
<script src="/admin/scripts/common.js" type="text/javascript"></script>

<script type="text/javascript">
    $(function(){
        uploadImgFcup('avatar');
        <% if(modify===-1){ %>
        $(".btn-submit").click(function(){
            if($.trim($("#name").val())==''){
                layer.msg('请输入客户名称');
                return;
            }
            if($.trim($("#job").val())==''){
                layer.msg('请输入客户职位');
                return;
            }
            if($.trim($("#evaluation").val())==''){
                layer.msg('请输入客户评价');
                return;
            }
            if(typeof($("#avatar").prev().find('img').attr('src'))=='undefined'||$("#avatar").prev().find('img').attr('src')==''){
                layer.msg('请上传客户头像');
                return;
            }
            $.post('/admin/clientSay_add',{
                'type':'insert',
                'name':$("#name").val(),
                'job':$("#job").val(),
                'evaluation':$("#evaluation").val(),
                'avatar':$("#avatar").prev().find('img').attr('src') && $("#avatar").prev().find('img').attr('src')!==''?$("#avatar").prev().find('img').attr('src').split('?')[0]:''
            },function(data){
                if(data==1){
                    layer.confirm('保存成功',{btn:['继续添加','返回列表']},function(index){
                        window.location.reload();
                    },function (index) {
                        window.top.openMenu($(window.top.document).find('[data-index=2021092202]'));
                        window.top.freshClientSay();
                        window.location.reload();
                    })
                }
            })
        });
        <%} else {%>
            $(".btn-submit").click(function(){
            if($.trim($("#name").val())==''){
                layer.msg('请输入客户名称');
                return;
            }
            if($.trim($("#job").val())==''){
                layer.msg('请输入客户职位');
                return;
            }
            if($.trim($("#evaluation").val())==''){
                layer.msg('请输入客户评价');
                return;
            }
            if(typeof($("#avatar").prev().find('img').attr('src'))=='undefined'||$("#avatar").prev().find('img').attr('src')==''){
                layer.msg('请上传客户头像');
                return;
            }
            $.post('/admin/clientSay_add',{
                'type':'modify',
                'modify':'<%- modify -%>',
                'name':$("#name").val(),
                'job':$("#job").val(),
                'evaluation':$("#evaluation").val(),
                'avatar':$("#avatar").prev().find('img').attr('src') && $("#avatar").prev().find('img').attr('src')!==''?$("#avatar").prev().find('img').attr('src').split('?')[0]:''
            },function(data){
                if(data==1){
                    layer.msg('修改成功！',{time:1000},function(){
                        window.top.openMenu($(window.top.document).find('[data-index=2021092202]'));
                        window.top.freshClientSay();
                        var index = window.top.layer.getFrameIndex(window.name);
                            window.top.layer.close(index);
                    });
                }
            })
        });
        <% } %>
    })
</script>
</html>