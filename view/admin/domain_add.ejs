<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta name="viewport"
        content="width=device-width,initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <title>域名管理</title>
    <link href="static/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="static/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="static/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="static/css/animate.min.css" rel="stylesheet">
    <link href="static/css/style.min862f.css?v=4.1.0" rel="stylesheet">
</head>

<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>域名管理</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="form_basic.html#">选项1</a>
                                </li>
                                <li><a href="form_basic.html#">选项2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                            <div class="form-horizontal m-t">
                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label">站外域名：</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" id="domain_outside" value="<%- domain_outside -%>" placeholder="请输入站外域名" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label">站内域名：</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" id="domain_inside" value="<%- domain_inside -%>" placeholder="请输入站内域名" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-8 col-sm-offset-3">
                                        <button class="btn btn-primary btn-submit" type="button">提交</button>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script type="text/javascript" src="static/js/jquery.min.js"></script>
<script src="static/js/plugins/layer/layer.min.js" type="text/javascript"></script>
<script type="text/javascript" src="scripts/fcup/fcup.min.js"></script>
<script src="/admin/scripts/common.js" type="text/javascript"></script>

<script type="text/javascript">
    $(function(){
        $(".btn-submit").click(function(){
            if($.trim($("#domain_inside").val())==''){
                layer.msg('请输入站内域名');
                return;
            }
            // if(typeof($("#poster").prev().find('img').attr('src'))=='undefined'||$("#avatar").prev().find('img').attr('src')==''){
            //     layer.msg('请上传封面图片');
            //     return;
            // }
            $.post('/admin/domain_add',{
                'domain_outside':$("#domain_outside").val(),
                'domain_inside':$("#domain_inside").val(),
                <% if(modify!==-1) {%>
                    'modify':<%-modify-%>,
                <% } %>
            },function(data){
                if(data!='修改成功'){
                    layer.msg(data);
                }else {
                    layer.confirm('修改成功',{btn:['修改成功']},function(index){
                        window.top.freshDomainList();
                        var index = window.top.layer.getFrameIndex(window.name);
                        window.top.layer.close(index);
                    })
                }
            })
        });
        
    })
</script>
</html>